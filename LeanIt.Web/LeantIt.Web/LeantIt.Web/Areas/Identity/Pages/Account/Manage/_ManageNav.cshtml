@using LeantIt.Web.Models;
@inject SignInManager<AplicacaoUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<input id="inputExternalImage" type="file" />
<input id="imageString" type="text" style="display: none" />


<img src="" alt="">
<div class="caminhos">
    <div class="historico">
        <i class="fa-solid fa-car"></i> <span><a asp-area="" asp-controller="Historico" asp-action="Index">Histórico de viagens</a></span>
    </div>
    <div class="outros detalhesConta">
        <i class="fa-solid fa-user"></i> <span><a class="@ManageNavPages.IndexNavClass(ViewContext)" asp-page="./Index">Perfil</a></span>
    </div>
    <div class="outros alterarSenha">
        <i class="fa-solid fa-lock"></i> <span><a class="@ManageNavPages.ChangePasswordNavClass(ViewContext)" asp-page="./ChangePassword">Redefinir senha</a></span>
    </div>
    @if (Model.Aluguel == null)
    {
        <div class="outros">
            <i class="fa-solid fa-trash"></i> <span><a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Deletar perfil</a></span>
        </div>
    }
</div>


@section Styles {
    <link rel="stylesheet" href="~/css/manage.css" />
}

@section Scripts {
    <script src="~/js/uploadimagem.js"></script>
}
