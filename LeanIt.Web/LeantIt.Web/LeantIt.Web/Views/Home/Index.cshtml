    <script>
        
        let map;

        async function initMap() {
            const position = { lat: -26.915946, lng: -49.072369 };
            const { Map } = await google.maps.importLibrary("maps");

            map = new Map(document.getElementById("map"), {
                zoom: 15,
                center: position,
                mapId: "DEMO_MAP_ID",
            });

            var iconToTheMarker = 'https://res.cloudinary.com/dtvypcack/image/upload/v1702153486/image-removebg-preview_ghorta_yzn6o4_mebdq3.png';


            @foreach(var carro in Model)
            {
                <text>
                            new google.maps.Marker({
                            map: map,
                            position: { lat: @carro.Latitude, lng: @carro.Longitude },
                            icon: iconToTheMarker,
                        animation: google.maps.Animation.DROP
                        });
                </text>
            }
            
        }

        initMap();

    </script>

    <script async
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh7XqulgkrxKP_wwrWE4fX_dECUGI6xhI&libraries=places&callback=initMap">
    </script>

